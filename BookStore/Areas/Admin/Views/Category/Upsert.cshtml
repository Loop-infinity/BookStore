@model BookStore.Models.Category;
@{
    ViewData["Title"] = "Upsert";
}



<div class="container m-5">

    <form method="POST" asp-action="Upsert" class="container border rounded p-5 mx-auto" style="width: 60%;">

        <input asp-for="@Model.Id" type="hidden">

        <div class="form-group row ">
            <div class="col-3">
                <label class="col-form-label">Name</label>
            </div>
            <div class="col-8">
                <input asp-for="@Model.Name" type="text" class="form-control">
            </div>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>



        <div class="form-group row mt-4">
            <div class="col-4 offset-3">
                <input type="submit" class="btn btn-outline-success form-control" value="Upsert" />
            </div>
            <div class="col-4">
                <a asp-page="/Admin/Category/Index" class="btn btn-outline-danger form-control">Back to BookList</a>
            </div>
        </div>

    </form>

</div>

@section Scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>/>
}
